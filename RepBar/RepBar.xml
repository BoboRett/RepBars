<Ui xmlns="http://www.blizzard.com/wow/ui/" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xsi:schemaLocation="http://www.blizzard.com/wow/ui/ 
..\..\FrameXML\UI.xsd"> 
	<Script file="RepBar.lua"/>

	<Button name="RepBarTemplate" virtual="true">
		<Size>
			<AbsDimension x="280" y="20"/>
		</Size>
		<Layers>
			<Layer level="ARTWORK">
				<Texture name="$parentBackground" file="Interface\PaperDollInfoFrame\UI-Character-ReputationBar">
					<Size>
						<AbsDimension x="280" y="21"/>
					</Size>
					<Anchors>
						<Anchor point="LEFT">
							<Offset x="0" y="0"/>
						</Anchor>
					</Anchors>
					<TexCoords left="0.0" right="0.7578125" top="0.0" bottom="0.328125"/>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<FontString name="$parentFactionName" inherits="GameFontHighlightSmall" justifyH="LEFT">
					<Size x="135" y="10"/>
					<Anchors><Anchor x="10" y="-5"/></Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<StatusBar name="$parentReputationBar" drawLayer="BACKGROUND" minValue="0" maxValue="10000" defaultValue="1">
				<Size>
					<AbsDimension x="130" y="13"/>
				</Size>
				<Anchors>
					<Anchor point="RIGHT">
						<Offset>
							<AbsDimension x="0" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Layers> <!--Slider Textures-->
					<Layer level="ARTWORK">
						<Texture name="$parentLeftTexture" file="Interface\PaperDollInfoFrame\UI-Character-ReputationBar">
							<Size>
								<AbsDimension x="90" y="15"/>
							</Size>
							<Anchors>
								<Anchor point="LEFT">
									<Offset>
										<AbsDimension x="0" y="0"/>
									</Offset>
								</Anchor>
							</Anchors>
							<TexCoords left="0.765262" right="1.0" top="0.047" bottom="0.281"/>
						</Texture>
						<Texture name="$parentRightTexture" file="Interface\PaperDollInfoFrame\UI-Character-ReputationBar">
							<Size>
								<AbsDimension x="40" y="15"/>
							</Size>
							<Anchors>
								<Anchor point="LEFT" relativeTo="$parentLeftTexture" relativePoint="RIGHT">
									<Offset>
										<AbsDimension x="0" y="0"/>
									</Offset>
								</Anchor>
							</Anchors>
							<TexCoords left="0.0" right="0.152" top="0.3906" bottom="0.625"/>
						</Texture>
						<FontString name="$parentFactionStanding" inherits="GameFontHighlightSmall" text="Revered">
							<Anchors>
								<Anchor point="CENTER">
									<Offset>
										<AbsDimension x="0" y="0"/>
									</Offset>
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
					<Layer level="OVERLAY">
						<Texture name="$parentHighlight2" file="Interface\PaperDollInfoFrame\UI-Character-ReputationBar-Highlight" alphaMode="ADD" hidden="true">
							<Size>
								<AbsDimension x="17" y="28"/>
							</Size>
							<Anchors>
								<Anchor point="RIGHT">
									<Offset x="4" y="0"/>
								</Anchor>
							</Anchors>
							<TexCoords left="0" right="0.06640625" top="0.4375" bottom="0.875"/>
						</Texture>
						<Texture name="$parentHighlight1" file="Interface\PaperDollInfoFrame\UI-Character-ReputationBar-Highlight" alphaMode="ADD" hidden="true">
							<Size>
								<AbsDimension x="0" y="28"/>
							</Size>
							<Anchors>
								<Anchor point="RIGHT" relativeTo="$parentHighlight2" relativePoint="LEFT"/>
							</Anchors>
							<TexCoords left="0" right="1" top="0" bottom="0.4375"/>
						</Texture>
					</Layer>
				</Layers>
				<Frames> <!--Cache Icon Textures-->
					<Frame parentKey="BonusIcon" hidden="true">
						<Size x="16" y="16"/>
						<Anchors>
							<Anchor point="CENTER" relativeKey="$parent" relativePoint="RIGHT" x="0" y="0"/>
						</Anchors>
						<Layers>
							<Layer level="BACKGROUND">
								<Texture parentKey="Glow" atlas="ParagonReputation_Glow" useAtlasSize="true">
									<Anchors>
										<Anchor point="CENTER" x="-1" y="0"/>
									</Anchors>
									<Animations>
										<AnimationGroup parentKey="GlowAnim" looping="BOUNCE">
											<Alpha childKey="Glow" fromAlpha="0.75" toAlpha="0" duration="1.0" smoothing="IN_OUT" order="1"/>
										</AnimationGroup>
									</Animations>
								</Texture>
							</Layer>
							<Layer level="ARTWORK">
								<Texture parentKey="Icon" atlas="ParagonReputation_Bag" useAtlasSize="true">
									<Anchors>
										<Anchor point="CENTER"/>
									</Anchors>
								</Texture>
							</Layer>
							<Layer level="OVERLAY">
								<Texture parentKey="Check" atlas="ParagonReputation_Checkmark" useAtlasSize="true">
									<Anchors>
										<Anchor point="CENTER" x="5" y="-2"/>
									</Anchors>
								</Texture>
							</Layer>
							<Layer level="HIGHLIGHT">
								<Texture parentKey="Highlight" atlas="ParagonReputation_Bag" useAtlasSize="true" alphaMode="ADD">
									<Anchors>
										<Anchor point="CENTER"/>
									</Anchors>
								</Texture>
							</Layer>
						</Layers>							
					</Frame>
				</Frames>
				<BarTexture file="Interface\PaperDollInfoFrame\UI-Character-Skills-Bar"/>
				<BarColor r=".25" g=".75" b=".25"/>
				<Animations>
					<AnimationGroup parentKey="GlowAnim" looping="BOUNCE">
						<Alpha childKey="Glow" fromAlpha="0.75" toAlpha="0" duration="1.0" smoothing="IN_OUT" order="1"/>
					</AnimationGroup>
				</Animations>
			</StatusBar>
		</Frames>
	</Button>

	<Frame name="RepBarLoader">
		<Scripts>
			<OnLoad>
				RepBar_OnLoad(self);
			</OnLoad>
			<OnEvent>
				RepBar_OnEvent(self, event, ...);
			</OnEvent>
			<OnUpdate>
				RepBar_OnUpdate(self, elapsed);
			</OnUpdate>
		</Scripts>
	</Frame>

	<Frame name="RepBarFrame" parent="ReputationFrame" movable="true" enableMouse="true">
		<Backdrop bgFile="Interface\TutorialFrame\TutorialFrameBackground" edgeFile="Interface/Tooltips/UI-Tooltip-Border">
			<EdgeSize>
				<AbsValue val="16"/>
			</EdgeSize>
			<TileSize>
				<AbsValue val="32"/>
			</TileSize>
			<BackgroundInsets>
				<AbsInset left="5" right="5" top="5" bottom="5"/>
			</BackgroundInsets>
		</Backdrop>
		<Size x="340" y="240"/>
		<Anchors>
			<Anchor point="TOPLEFT" relativePoint="TOPRIGHT" x="20"/>
		</Anchors> 
		<Layers>
			<Layer level="ARTWORK">
				<FontString inherits="GameFontNormal" text="Paragon Reputations">
					<Anchors>
						<Anchor point="Top" y="-10"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button name="RepBar1" inherits="RepBarTemplate" id="1">
				<Anchors>
					<Anchor point="TOP" relativeTo="RepBarFrame" y="-25"/>
				</Anchors>
			</Button>
			<Button name="RepBar2" inherits="RepBarTemplate" id="2">
				<Anchors>
					<Anchor point="TOP" relativeTo="RepBarFrame" y="-50"/>
				</Anchors>
			</Button>
			<Button name="RepBar3" inherits="RepBarTemplate" id="3">
				<Anchors>
					<Anchor point="TOP" relativeTo="RepBarFrame" y="-75"/>
				</Anchors>
			</Button>
			<Button name="RepBar4" inherits="RepBarTemplate" id="4">
				<Anchors>
					<Anchor point="TOP" relativeTo="RepBarFrame" y="-100"/>
				</Anchors>
			</Button>
			<Button name="RepBar5" inherits="RepBarTemplate" id="5">
				<Anchors>
					<Anchor point="TOP" relativeTo="RepBarFrame" y="-125"/>
				</Anchors>
			</Button>
			<Button name="RepBar6" inherits="RepBarTemplate" id="6">
				<Anchors>
					<Anchor point="TOP" relativeTo="RepBarFrame" y="-150"/>
				</Anchors>
			</Button>
			<Button name="RepBar7" inherits="RepBarTemplate" id="7">
				<Anchors>
					<Anchor point="TOP" relativeTo="RepBarFrame" y="-175"/>
				</Anchors>
			</Button>
			<Button name="Close" inherits="UIPanelButtonTemplate" text="Close">
				<Size x="120" y="20"/>
				<Anchors>
					<Anchor point="BOTTOM" relativeTo="RepBarFrame" y="15"/>
				</Anchors>
				<Scripts>
					<OnClick>self:GetParent():Hide()</OnClick>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad></OnLoad>
			<OnShow>
				RepBar_Window()
			</OnShow>
		</Scripts>

	</Frame>

</Ui> 
